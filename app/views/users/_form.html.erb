<%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
            <ul>
              <% user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username, class: 'form-control' %>
    </div>

    <% if current_page?(signup_path) %>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, id: :user_password_digest, class: 'form-control' %>
        </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email, class: 'form-control' %>
    </div>


    <div>
      <%= form.submit class: 'btn btn-default profile-button' %>
    </div>
<% end %>
